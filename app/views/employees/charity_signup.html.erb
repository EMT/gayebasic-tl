	<%= field_set_tag nil, { :class => 'visual-section', :id => 'step-3', :style => 'display: none;' } do %>
		
		<h2>Personal Details</h2>
		
		<%= f.input :name, :label => "Your name" %>
		
		<%= f.input :email, :label => "Your email address" %>
		<%= f.input :password, :label => "Choose a password" %>
		
		<%= f.input :number, :label => "Your National Insurance or employee number" %>
		
		<%#= f.input :postcode, :label => "Postcode" %>
		
		<div class="input string optional field_with_hint">
			<label class="string optional" for="employer_colour_1">Home Address</label>
